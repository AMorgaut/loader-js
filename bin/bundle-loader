#! /usr/bin/env commonjs

// assuming nodejs
// TODO: detect dirname according to what platform supports

if (typeof __dirname == "undefined")
    throw new Error("Cannot get dirname. '__dirname' variable not defined (nodejs).");

var parts = __dirname.split("/");

require("../lib/loader").boot({
    program: parts.slice(0, parts.length-1).join("/") + "/programs/bundle-loader/program.json"
});
